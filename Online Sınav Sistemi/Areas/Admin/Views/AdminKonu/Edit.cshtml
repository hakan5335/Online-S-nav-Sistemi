@using (Html.BeginForm("Edit", "AdminKonu", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
     
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.KonuID)

        <div class="form-group">
            @Html.LabelFor(model => model.KonuAdi, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KonuAdi)
                @Html.ValidationMessageFor(model => model.KonuAdi)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DersID, "DersID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DersID", String.Empty)
                @Html.ValidationMessageFor(model => model.DersID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

