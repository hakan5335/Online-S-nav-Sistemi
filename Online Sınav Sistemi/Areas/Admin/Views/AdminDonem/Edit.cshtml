@using (Html.BeginForm("Edit", "AdminDonem", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
     
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.DonemID)

        <div class="form-group">
            @Html.LabelFor(model => model.DonemAdi, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DonemAdi)
                @Html.ValidationMessageFor(model => model.DonemAdi)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BolumID, "BolumID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("BolumID", String.Empty)
                @Html.ValidationMessageFor(model => model.BolumID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

