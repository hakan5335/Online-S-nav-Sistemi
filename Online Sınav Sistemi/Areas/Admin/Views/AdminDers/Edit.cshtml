@{
    Layout = null;
}

@using (Html.BeginForm("Edit", "AdminDers", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.DersID)

        <div class="form-group">
            @Html.LabelFor(model => model.DersAdi, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DersAdi)
                @Html.ValidationMessageFor(model => model.DersAdi)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DonemID, "DonemID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DonemID", String.Empty)
                @Html.ValidationMessageFor(model => model.DonemID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

